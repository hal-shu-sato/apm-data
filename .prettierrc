{
  "singleQuote": true,
  "plugins": ["prettier-plugin-packagejson"],
  "overrides": [
    {
      "files": ["*.xsd"],
      "options": {
        "plugins": ["@prettier/plugin-xml"],
        "xmlWhitespaceSensitivity": "ignore"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
